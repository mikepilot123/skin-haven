<style>
  .featured-arrivals-section {
    display: grid;
    grid-template-columns: 1fr 3fr;
    gap: 3rem;
    align-items: center;
    padding: 3rem 0;
  }
  .featured-arrivals-text {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }
  .featured-arrivals-text h1 {
    font-size: 3rem;
    margin-bottom: 0.5rem;
  }
  .featured-arrivals-text p {
    margin-bottom: 1.5rem;
    text-align: center;
  }
  .featured-view-collection-btn {
    color: black;
  }
  .featured-slider-component {
    position: relative;
  }
  .featured-slider-arrow {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    z-index: 2;
    background: white;
    border: none;
    font-size: 2rem;
    color: #ccc;
    cursor: pointer;
    padding: 0.5rem 1rem;
    opacity: 0.8;
    transition: color 0.2s, opacity 0.2s;
  }
  .featured-slider-arrow:hover {
    color: #333;
    opacity: 1;
  }
  .featured-slider-arrow--left {
    left: 0;
  }
  .featured-slider-arrow--right {
    right: 0;
  }
  .featured-slider-container {
    display: flex;
    overflow-x: auto;
    scroll-behavior: smooth;
    -ms-overflow-style: none;
    scrollbar-width: none;
    gap: 1.5rem;
    list-style: none;
  }
  .featured-slider-container::-webkit-scrollbar {
    display: none;
  }
  .featured-slider-item {
    flex: 0 0 calc(33.33% - 1rem);
    max-width: 100%;
  }
</style>

<div class="featured-arrivals-section page-width">
  <!-- Column 1: The Text Content (now on the left) -->
  <div class="featured-arrivals-text">
    <h1>{{ section.settings.heading }}</h1>
    <p>{{ section.settings.subheading }}</p>
    {% if section.settings.button_text != blank %}
      <a href="{{ section.settings.button_link }}" class="featured-view-collection-btn">{{ section.settings.button_text }}</a>
    {% endif %}
  </div>

  <!-- Column 2: The Slider (now on the right) -->
  <div class="featured-slider-component">
   <button class="featured-slider-arrow featured-slider-arrow--left" aria-label="Scroll left" type="button">
  <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
    <path d="M15 18l-6-6 6-6" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round"/>
  </svg>
</button>
    <ul class="featured-slider-container">
    
      {%- for product in section.settings.collection.products limit: 10 -%}
        <li class="featured-slider-item">
          {%- render 'card-product',
              card_product: product,
              media_aspect_ratio: section.settings.image_ratio,
              show_vendor: section.settings.show_vendor,
              show_rating: section.settings.show_rating
          -%}
        </li>
      {%- else -%}
        {%- for i in (1..3) -%}
          <li class="featured-slider-item">
            {%- render 'card-product',
              media_aspect_ratio: section.settings.image_ratio
            -%}
          </li>
        {%- endfor -%}
      {%- endfor -%}
    </ul>

  <button class="featured-slider-arrow featured-slider-arrow--right" aria-label="Scroll right" type="button">
  <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
    <path d="M9 6l6 6-6 6" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round"/>
  </svg>
</button>
  </div>
</div>

{% schema %}
{
  "name": "New Arrivals Slider",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "NEW ARRIVALS"
    },
    {
      "type": "richtext",
      "id": "subheading",
      "label": "Subheading",
      "default": "<p>Enjoy savings on our most popular product sets.</p>"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop All"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link",
      "default": "/collections/all"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection to display"
    },
    {
      "type": "select",
      "id": "image_ratio",
      "options": [
        {
          "value": "adapt",
          "label": "Adapt to image"
        },
        {
          "value": "portrait",
          "label": "Portrait"
        },
        {
          "value": "square",
          "label": "Square"
        }
      ],
      "default": "square",
      "label": "Image ratio"
    },
    {
      "type": "checkbox",
      "id": "show_vendor",
      "default": false,
      "label": "Show vendor"
    },
    {
      "type": "checkbox",
      "id": "show_rating",
      "default": false,
      "label": "Show rating"
    }
  ],
  "presets": [
    {
      "name": "New Arrivals Slider Right"
    }
  ]
}
{% endschema %}
