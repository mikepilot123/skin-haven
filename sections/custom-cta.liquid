<style>
  .skin-care-cta {
    position: relative;
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
    background: {{ section.settings.background_color }};
    overflow: hidden;
  }

  .skin-care-cta__background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .skin-care-cta__background img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .skin-care-cta__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: {{ section.settings.overlay_color }};
    opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};
    z-index: 2;
  }

  .skin-care-cta__container {
    position: relative;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    z-index: 3;
    text-align: center;
  }

  .skin-care-cta__content {
    max-width: 800px;
    margin: 0 auto;
  }

  .skin-care-cta__badge {
    display: inline-block;
    background: {{ section.settings.badge_background }};
    color: {{ section.settings.badge_color }};
    padding: 0.5rem 1.5rem;
    border-radius: 25px;
    font-size: 12px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 1.5rem;
    border: 1px solid {{ section.settings.badge_border }};
  }

  .skin-care-cta__heading {
    font-size: {{ section.settings.heading_size }}px;
    font-family: 'Nunito Sans', Arial, sans-serif;
    font-weight: 700;
    color: {{ section.settings.heading_color }};
    margin: 0 0 1.5rem 0;
    letter-spacing: 0.02em;
    line-height: 1.2;
    text-transform: {{ section.settings.heading_transform }};
  }

  .skin-care-cta__subheading {
    font-size: {{ section.settings.subheading_size }}px;
    color: {{ section.settings.subheading_color }};
    margin: 0 0 2.5rem 0;
    font-family: 'Nunito Sans', Arial, sans-serif;
    font-weight: 400;
    line-height: 1.5;
    opacity: 0.9;
  }

  .skin-care-cta__buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
    margin-bottom: 3rem;
  }

  .skin-care-cta__btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    min-height: 40px;
    padding: 0.75rem 1.5rem;
    background: transparent;
    color: #000;
    border: 2px solid #000;
    border-radius: 30px;
    font-size: 14px;
    font-family: 'Nunito Sans', Arial, sans-serif;
    font-weight: 700;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    cursor: pointer;
    transition: all 0.3s ease;
    text-decoration: none;
    outline: none;
    position: relative;
    overflow: hidden;
    gap: 8px;
    min-width: 140px;
    white-space: nowrap;
  }

  .skin-care-cta__btn::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
    transition: left 0.6s;
    z-index: 1;
  }

  .skin-care-cta__btn:hover::before {
    left: 100%;
  }

  .skin-care-cta__btn span,
  .skin-care-cta__btn svg {
    position: relative;
    z-index: 2;
  }

  .skin-care-cta__btn--primary:hover,
  .skin-care-cta__btn--secondary:hover {
    background: #000;
    color: #fff;
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0,0,0,0.15);
  }

  .skin-care-cta__btn svg {
    margin-left: 8px;
    width: 16px;
    height: 16px;
    transition: transform 0.3s ease;
  }

  .skin-care-cta__btn:hover svg {
    transform: translateX(4px);
  }

  .skin-care-cta__trust-indicators {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 2rem;
    flex-wrap: wrap;
    margin-bottom: 2rem;
  }

  .skin-care-cta__trust-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 14px;
    color: {{ section.settings.trust_text_color }};
    font-weight: 600;
  }

  .skin-care-cta__trust-icon {
    width: 20px;
    height: 20px;
    color: {{ section.settings.trust_icon_color }};
  }

  .skin-care-cta__newsletter {
    background: rgba(255,255,255,0.1);
    backdrop-filter: blur(10px);
    border-radius: 15px;
    padding: 2rem;
    margin-top: 2rem;
    border: 1px solid rgba(255,255,255,0.2);
  }

  .skin-care-cta__newsletter-title {
    font-size: 18px;
    font-weight: 700;
    color: {{ section.settings.newsletter_title_color }};
    margin: 0 0 1rem 0;
  }

  .skin-care-cta__newsletter-form {
    display: flex;
    gap: 1rem;
    max-width: 400px;
    margin: 0 auto;
  }

  .skin-care-cta__newsletter-input {
    flex: 1;
    padding: 0.75rem 1rem;
    border: 1px solid rgba(255,255,255,0.3);
    border-radius: 25px;
    background: rgba(255,255,255,0.9);
    font-size: 14px;
    outline: none;
    transition: all 0.3s ease;
  }

  .skin-care-cta__newsletter-input:focus {
    border-color: {{ section.settings.primary_button_bg }};
    box-shadow: 0 0 0 3px rgba(233, 30, 99, 0.1);
  }

  .skin-care-cta__newsletter-btn {
    padding: 0.75rem 1.5rem;
    background: {{ section.settings.primary_button_bg }};
    color: white;
    border: none;
    border-radius: 25px;
    font-weight: 700;
    font-size: 14px;
    cursor: pointer;
    transition: all 0.3s ease;
    white-space: nowrap;
  }

  .skin-care-cta__newsletter-btn:hover {
    background: {{ section.settings.primary_button_hover_bg }};
    transform: translateY(-1px);
  }

  .skin-care-cta__social-proof {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1.5rem;
    margin-top: 2rem;
    flex-wrap: wrap;
  }

  .skin-care-cta__rating {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .skin-care-cta__stars {
    display: flex;
    gap: 2px;
  }

  .skin-care-cta__star {
    width: 16px;
    height: 16px;
    color: #ffd700;
  }

  .skin-care-cta__rating-text {
    font-size: 14px;
    color: {{ section.settings.social_proof_color }};
    font-weight: 600;
  }

  .skin-care-cta__testimonial {
    font-style: italic;
    font-size: 16px;
    color: {{ section.settings.social_proof_color }};
    max-width: 400px;
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    .skin-care-cta__container {
      padding: 0 1rem;
    }

    .skin-care-cta__heading {
      font-size: {{ section.settings.heading_size | times: 0.8 }}px;
    }

    .skin-care-cta__subheading {
      font-size: {{ section.settings.subheading_size | times: 0.9 }}px;
    }

    .skin-care-cta__buttons {
      flex-direction: column;
      gap: 1rem;
    }

    .skin-care-cta__btn {
      width: 100%;
      max-width: 280px;
    }

    .skin-care-cta__trust-indicators {
      gap: 1rem;
    }

    .skin-care-cta__trust-item {
      font-size: 12px;
    }

    .skin-care-cta__newsletter {
      padding: 1.5rem;
    }

    .skin-care-cta__newsletter-form {
      flex-direction: column;
      gap: 1rem;
    }

    .skin-care-cta__social-proof {
      flex-direction: column;
      gap: 1rem;
    }
  }

  @media (max-width: 480px) {
    .skin-care-cta__trust-indicators {
      flex-direction: column;
      gap: 1rem;
    }
  }
</style>

<section class="skin-care-cta">
  {% if section.settings.background_image %}
    <div class="skin-care-cta__background">
      <img
        src="{{ section.settings.background_image | image_url: width: 1600 }}"
        alt="{{ section.settings.background_image.alt | escape }}"
        loading="lazy"
        width="{{ section.settings.background_image.width }}"
        height="{{ section.settings.background_image.height }}"
      >
    </div>
  {% endif %}

  <div class="skin-care-cta__overlay"></div>

  <div class="skin-care-cta__container page-width">
    <div class="skin-care-cta__content">
      {% if section.settings.badge_text != blank %}
        <div class="skin-care-cta__badge">
          {{ section.settings.badge_text | escape }}
        </div>
      {% endif %}

      {% if section.settings.heading != blank %}
        <h2 class="skin-care-cta__heading">
          {{ section.settings.heading | escape }}
        </h2>
      {% endif %}

      {% if section.settings.subheading != blank %}
        <p class="skin-care-cta__subheading">
          {{ section.settings.subheading | escape }}
        </p>
      {% endif %}

      <div class="skin-care-cta__buttons">
        {% if section.settings.primary_button_text != blank %}
          <a
            href="{{ section.settings.primary_button_url }}"
            class="skin-care-cta__btn skin-care-cta__btn--primary"
            {% if section.settings.primary_button_new_tab %}
              target="_blank" rel="noopener noreferrer"
            {% endif %}
          >
            {{ section.settings.primary_button_text | escape }}
            <svg
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
          </a>
        {% endif %}

        {% if section.settings.secondary_button_text != blank %}
          <a
            href="{{ section.settings.secondary_button_url }}"
            class="skin-care-cta__btn skin-care-cta__btn--secondary"
            {% if section.settings.secondary_button_new_tab %}
              target="_blank" rel="noopener noreferrer"
            {% endif %}
          >
            {{ section.settings.secondary_button_text | escape }}
            <svg
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
          </a>
        {% endif %}
      </div>

      {% if section.settings.show_trust_indicators %}
        <div class="skin-care-cta__trust-indicators">
          <div class="skin-care-cta__trust-item">
            <svg
              class="skin-care-cta__trust-icon"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path d="M9 12l2 2 4-4"/>
              <path d="M21 12c-1 0-3-1-3-3s2-3 3-3 3 1 3 3-2 3-3 3"/>
              <path d="M3 12c1 0 3-1 3-3s-2-3-3-3-3 1-3 3 2 3 3 3"/>
              <path d="M13 12c0-1 1-3 3-3s3 2 3 3-1 3-3 3-3-2-3-3"/>
            </svg>
            {{ section.settings.trust_indicator_1 | default: 'Dermatologist Approved' }}
          </div>

          <div class="skin-care-cta__trust-item">
            <svg
              class="skin-care-cta__trust-icon"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <circle cx="12" cy="12" r="10"/>
              <path d="M8 14s1.5 2 4 2 4-2 4-2"/>
              <line x1="9" y1="9" x2="9.01" y2="9"/>
              <line x1="15" y1="9" x2="15.01" y2="9"/>
            </svg>
            {{ section.settings.trust_indicator_2 | default: '30-Day Guarantee' }}
          </div>

          <div class="skin-care-cta__trust-item">
            <svg
              class="skin-care-cta__trust-icon"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path d="M12 2L2 7l10 5 10-5-10-5z"/>
              <path d="M2 17l10 5 10-5"/>
              <path d="M2 12l10 5 10-5"/>
            </svg>
            {{ section.settings.trust_indicator_3 | default: 'Free Shipping' }}
          </div>
        </div>
      {% endif %}

      {% if section.settings.show_social_proof %}
        <div class="skin-care-cta__social-proof">
          <div class="skin-care-cta__rating">
            <div class="skin-care-cta__stars">
              {% for i in (1..5) %}
                <svg class="skin-care-cta__star" viewBox="0 0 24 24" fill="currentColor">
                  <polygon points="12,2 15.09,8.26 22,9.27 17,14.14 18.18,21.02 12,17.77 5.82,21.02 7,14.14 2,9.27 8.91,8.26"/>
                </svg>
              {% endfor %}
            </div>
            <span class="skin-care-cta__rating-text">
              {{ section.settings.rating_text | default: '4.9/5 from 2,500+ reviews' }}
            </span>
          </div>

          {% if section.settings.testimonial_text != blank %}
            <div class="skin-care-cta__testimonial">"{{ section.settings.testimonial_text | escape }}"</div>
          {% endif %}
        </div>
      {% endif %}

      {% if section.settings.show_newsletter %}
        <div class="skin-care-cta__newsletter">
          <h3 class="skin-care-cta__newsletter-title">
            {{ section.settings.newsletter_title | default: 'Get Skin Care Tips & Exclusive Offers' }}
          </h3>
          <form
            class="skin-care-cta__newsletter-form"
            action="/contact#contact_form"
            method="post"
            id="contact_form"
            accept-charset="UTF-8"
          >
            <input type="hidden" name="form_type" value="customer">
            <input type="hidden" name="utf8" value="âœ“">
            <input
              type="email"
              name="contact[email]"
              class="skin-care-cta__newsletter-input"
              placeholder="{{ section.settings.newsletter_placeholder | default: 'Enter your email address' }}"
              required
            >
            <button type="submit" class="skin-care-cta__newsletter-btn">
              {{ section.settings.newsletter_button_text | default: 'Subscribe' }}
            </button>
          </form>
        </div>
      {% endif %}
    </div>
  </div>
</section>

