        },
        {
          "value": "uppercase",
          "label": "Uppercase"
        },
        {
          "value": "lowercase",
          "label": "Lowercase"
        },
        {
          "value": "capitalize",
          "label": "Capitalize"
        }
      ],
      "default": "uppercase",
      "label": "Heading text transform"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "subheading_color",
      "label": "Subheading color",
      "default": "#666666"
    },
    {
      "type": "color",
      "id": "item_background",
      "label": "Brand item background",
      "default": "transparent"
    },
    {
      "type": "header",
      "content": "Logo Effects"
    },
    {
      "type": "select",
      "id": "logo_filter",
      "options": [
        {
          "value": "none",
          "label": "None"
        },
        {
          "value": "grayscale(100%)",
          "label": "Grayscale"
        },
        {
          "value": "opacity(0.7)",
          "label": "Reduced opacity"
        },
        {
          "value": "grayscale(100%) opacity(0.7)",
          "label": "Grayscale + Reduced opacity"
        }
      ],
      "default": "grayscale(100%) opacity(0.7)",
      "label": "Logo filter effect",
      "info": "Effect applied to logos (removed on hover)"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 60,
      "unit": "px",
      "label": "Top padding"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 60,
      "unit": "px",
