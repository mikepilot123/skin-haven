<style>
  .brands-showcase {
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
    background-color: {{ section.settings.background_color }};
  }

  .brands-showcase__container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .brands-showcase__header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .brands-showcase__heading {
    font-size: {{ section.settings.heading_size }}px;
    font-family: 'futura-pt-bold', 'Arial Black', Arial, sans-serif;
    font-weight: 700;
    color: {{ section.settings.heading_color }};
    margin: 0 0 1rem 0;
    letter-spacing: 0.02em;
    text-transform: {{ section.settings.heading_transform }};
    line-height: 1.2;
  }

  .brands-showcase__subheading {
    font-size: {{ section.settings.subheading_size }}px;
    color: {{ section.settings.subheading_color }};
    margin: 0;
    font-family: 'futura-pt', Arial, sans-serif;
    font-weight: 400;
    line-height: 1.4;
  }

  .brands-showcase__grid {
    display: grid;
    grid-template-columns: repeat({{ section.settings.columns_desktop }}, 1fr);
    gap: {{ section.settings.grid_gap }}px;
    align-items: center;
    justify-items: center;
  }

  .brands-showcase__item {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 1.5rem;
    transition: transform 0.3s ease, opacity 0.3s ease;
    width: 100%;
    height: {{ section.settings.logo_height }}px;
    border-radius: 8px;
    background-color: {{ section.settings.item_background }};
  }

  .brands-showcase__item:hover {
    transform: translateY(-2px);
    opacity: 0.8;
  }

  .brands-showcase__logo {
    width: 100%;
    height: 100%;
    object-fit: contain;
    object-position: center;
    filter: none;
    transition: all 0.3s ease;
    display: block;
  }

  .brands-showcase__item:hover .brands-showcase__logo {
    filter: grayscale(100%) opacity(0.6);
    transform: scale(0.95);
  }

  .brands-showcase__link {
    display: block;
    width: 100%;
    height: 100%;
    text-decoration: none;
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    .brands-showcase__container {
      padding: 0 1rem;
    }

    .brands-showcase__grid {
      grid-template-columns: repeat({{ section.settings.columns_mobile }}, 1fr);
      gap: {{ section.settings.grid_gap | divided_by: 2 }}px;
    }

    .brands-showcase__heading {
      font-size: {{ section.settings.heading_size | times: 0.8 }}px;
    }

    .brands-showcase__subheading {
      font-size: {{ section.settings.subheading_size | times: 0.9 }}px;
    }

    .brands-showcase__item {
      padding: 1rem;
      height: {{ section.settings.logo_height | times: 0.8 }}px;
    }

    .brands-showcase__logo {
      width: 100%;
      height: 100%;
    }
  }

  @media (max-width: 480px) {
    .brands-showcase__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>

<section class="brands-showcase">
  <div class="brands-showcase__container page-width">
    {% if section.settings.heading != blank or section.settings.subheading != blank %}
      <div class="brands-showcase__header">
        {% if section.settings.heading != blank %}
          <h2 class="brands-showcase__heading">
            {{ section.settings.heading | escape }}
          </h2>
        {% endif %}
        {% if section.settings.subheading != blank %}
          <p class="brands-showcase__subheading">
            {{ section.settings.subheading | escape }}
          </p>
        {% endif %}
      </div>
    {% endif %}

    {% if section.blocks.size > 0 %}
      <div class="brands-showcase__grid">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'brand' %}
              <div class="brands-showcase__item" {{ block.shopify_attributes }}>
                {% if block.settings.brand_url != blank %}
                  <a
                    href="{{ block.settings.brand_url }}"
                    class="brands-showcase__link"
                    {% if block.settings.open_in_new_tab %}
                      target="_blank" rel="noopener noreferrer"
                    {% endif %}
                    aria-label="Visit {{ block.settings.brand_name | escape }}"
                  >
                {% endif %}

                {% if block.settings.brand_logo != blank %}
                  <img
                    src="{{ block.settings.brand_logo | image_url: width: 400 }}"
                    alt="{{ block.settings.brand_name | escape }}"
                    class="brands-showcase__logo"
                    loading="lazy"
                    width="{{ block.settings.brand_logo.width }}"
                    height="{{ block.settings.brand_logo.height }}"
                  >
                {% else %}
                  <div class="brands-showcase__placeholder">
                    {{ block.settings.brand_name | escape }}
                  </div>
                {% endif %}

                {% if block.settings.brand_url != blank %}
                  </a>
                {% endif %}
              </div>
          {% endcase %}
        {% endfor %}
      </div>
    {% else %}
      <div class="brands-showcase__empty">
        <p style="text-align: center; color: #666; font-size: 1.1rem; padding: 2rem;">
          Add brand blocks to showcase the companies you work with.
        </p>
      </div>
    {% endif %}
  </div>
</section>

