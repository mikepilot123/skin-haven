<style>
  .custom-footer {
    background-color: #000000;
    color: #ffffff;
    padding: 64px 0 32px;
    font-family: 'Nunito Sans', -apple-system, BlinkMacSystemFont, 'Segoe UI', system-ui, sans-serif;
  }
  
  .custom-footer__content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 24px;
  }
  
  .custom-footer__main {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1.5fr;
    gap: 48px;
    margin-bottom: 48px;
    align-items: start;
  }
  
  /* Brand Section */
  .custom-footer__brand {
    display: flex;
    flex-direction: column;
    gap: 24px;
  }
  
  .custom-footer__logo {
    font-size: 24px;
    font-weight: 300;
    letter-spacing: 2px;
    color: #E8B4B8;
    font-style: italic;
    margin-bottom: 8px;
  }
  
  .custom-footer__logo-image {
    margin-bottom: 8px;
  }
  
  .custom-footer__logo-image img {
    max-width: 150px;
    height: auto;
    filter: brightness(0.9);
    transition: filter 0.2s cubic-bezier(0.4, 0.0, 0.2, 1);
  }
  
  .custom-footer__logo-image img:hover {
    filter: brightness(1);
  }
  
  .custom-footer__tagline {
    font-size: 12px;
    font-weight: 400;
    letter-spacing: 1px;
    color: #B3B3B3;
    text-transform: uppercase;
    line-height: 1.4;
  }
  
  /* Column Styles */
  .custom-footer__column {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }
  
  .custom-footer__column-title {
    font-size: 14px;
    font-weight: 500;
    letter-spacing: 0.5px;
    margin-bottom: 8px;
    text-transform: uppercase;
    color: #ffffff;
    line-height: 1.4;
  }
  
  .custom-footer__link {
    color: #B3B3B3;
    text-decoration: none;
    font-size: 14px;
    font-weight: 400;
    line-height: 1.6;
    transition: color 0.2s cubic-bezier(0.4, 0.0, 0.2, 1);
    display: flex;
    align-items: center;
    gap: 8px;
  }
  
  .custom-footer__link:hover {
    color: #ffffff;
  }
  
  .custom-footer__link::before {
    content: 'â€º';
    font-size: 12px;
    color: #666666;
    transition: color 0.2s cubic-bezier(0.4, 0.0, 0.2, 1);
  }
  
  .custom-footer__link:hover::before {
    color: #E8B4B8;
  }
  
  /* Address Section */
  .custom-footer__address {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }
  
  .custom-footer__address-line {
    font-size: 14px;
    font-weight: 400;
    color: #B3B3B3;
    line-height: 1.5;
  }
  
  .custom-footer__contact-info {
    margin-top: 16px;
  }
  
  .custom-footer__contact-info p {
    margin: 4px 0;
    font-size: 14px;
    color: #B3B3B3;
  }
  
  /* Social Icons */
  .custom-footer__social-icons {
    display: flex;
    gap: 16px;
    margin-top: 16px;
  }
  
  .custom-footer__social-icon {
    width: 20px;
    height: 20px;
    fill: #B3B3B3;
    transition: fill 0.2s cubic-bezier(0.4, 0.0, 0.2, 1);
  }
  
  .custom-footer__social-icon:hover {
    fill: #E8B4B8;
  }
  
  /* Bottom Section */
  .custom-footer__bottom {
    border-top: 1px solid #333333;
    padding-top: 24px;
    text-align: center;
  }
  
  .custom-footer__copyright {
    font-size: 12px;
    color: #808080;
    font-weight: 400;
    letter-spacing: 0.5px;
    line-height: 1.4;
  }
  
  /* Mobile Responsive */
  @media (max-width: 768px) {
    .custom-footer {
      padding: 48px 0 24px;
    }
    
    .custom-footer__content {
      padding: 0 16px;
    }
    
    .custom-footer__main {
      grid-template-columns: 1fr;
      gap: 32px;
      margin-bottom: 32px;
    }
    
    .custom-footer__brand {
      text-align: center;
      order: -1;
    }
    
    .custom-footer__social-icons {
      justify-content: center;
    }
    
    .custom-footer__address {
      text-align: center;
    }
  }
  
  /* Tablet Responsive */
  @media (max-width: 1024px) and (min-width: 769px) {
    .custom-footer__main {
      grid-template-columns: 1fr 1fr;
      gap: 40px;
    }
    
    .custom-footer__brand {
      grid-column: 1 / -1;
      text-align: center;
      margin-bottom: 24px;
    }
    
    .custom-footer__address {
      grid-column: 1 / -1;
      text-align: center;
      margin-top: 24px;
    }
  }
  
  /* Focus States for Accessibility */
  .custom-footer__link:focus-visible {
    outline: 2px solid #E8B4B8;
    outline-offset: 2px;
    border-radius: 4px;
  }
  
  .custom-footer__social-icon:focus-visible {
    outline: 2px solid #E8B4B8;
    outline-offset: 2px;
    border-radius: 4px;
  }
  
  /* High Contrast Mode Support */
  @media (prefers-contrast: high) {
    .custom-footer__link {
      color: #ffffff;
    }
    
    .custom-footer__address-line,
    .custom-footer__contact-info p {
      color: #ffffff;
    }
  }
  
  /* Reduced Motion Support */
  @media (prefers-reduced-motion: reduce) {
    .custom-footer__link,
    .custom-footer__social-icon {
      transition: none;
    }
  }
</style>

